{
  "name": "trek-body-parser",
  "version": "0.1.0",
  "description": "Body parsing middleware",
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "test": "xo && nyc --reporter=lcov ava --no-cache -r babel-register -c 5"
  },
  "repository": "trekjs/body-parser",
  "keywords": [
    "trek",
    "engine",
    "middleware",
    "body-parser",
    "json",
    "urlencoded",
    "body"
  ],
  "author": "Fangdun Cai <cfddream@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "busboy": "0.2.13",
    "inflation": "2.0.0",
    "multer": "2.0.0-alpha.2",
    "qs": "6.2.1",
    "raw-body": "2.1.7"
  },
  "devDependencies": {
    "ava": "0.16.0",
    "babel-plugin-transform-async-to-generator": "6.16.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.16.0",
    "babel-preset-es2015": "6.16.0",
    "babel-register": "6.16.3",
    "nyc": "8.3.1",
    "request": "2.75.0",
    "request-promise": "4.1.1",
    "trek-engine": "0.4.4",
    "xo": "0.16.0"
  },
  "babel": {
    "plugins": [
      "transform-async-to-generator",
      "transform-es2015-modules-commonjs"
    ],
    "presets": [
      "es2015"
    ]
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "es6"
    ],
    "semicolon": false,
    "space": true,
    "ignores": [],
    "rules": {
      "babel/arrow-parens": [
        2,
        "as-needed"
      ],
      "babel/object-curly-spacing": 0,
      "curly": 0,
      "import/no-named-as-default": 0,
      "max-lines": 0,
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "todo",
            "fixme"
          ],
          "location": "anywhere"
        }
      ],
      "space-before-function-paren": [
        2,
        "always"
      ],
      "yoda": 0
    }
  }
}
